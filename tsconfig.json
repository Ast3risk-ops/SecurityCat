{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "outDir": "./dist",
        "rootDir": "./"
    },
    "include": [
        "src/**/*",
        "drizzle.config.ts"
    ],
    "exclude": ["node_modules", "dist"]
}